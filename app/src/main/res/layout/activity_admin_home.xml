<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adminPage.AdminHomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_admin_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="新增使用者"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_admin_add_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="新增回收站"
            app:layout_constraintEnd_toEndOf="@+id/btn_admin_add_user"
            app:layout_constraintStart_toStartOf="@+id/btn_admin_add_user"
            app:layout_constraintTop_toBottomOf="@+id/btn_admin_add_user" />

        <Button
            android:id="@+id/btn_admin_add_recycle_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="新增回收紀錄"
            app:layout_constraintEnd_toEndOf="@+id/btn_admin_add_station"
            app:layout_constraintStart_toStartOf="@+id/btn_admin_add_station"
            app:layout_constraintTop_toBottomOf="@+id/btn_admin_add_station" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>