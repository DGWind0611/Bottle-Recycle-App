<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"> <!-- 調整外部 padding，從 16dp 改為 8dp -->

    <!-- 自定義的圓形進度條 -->
    <com.fcu.android.bottlerecycleapp.customview.CircularProgressView
        android:id="@+id/cpv_achievement"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_activity_title_show"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 完成百分比文本，顯示在圓形進度條正中央 -->
    <TextView
        android:id="@+id/tv_achive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/cpv_achievement"
        app:layout_constraintEnd_toEndOf="@id/cpv_achievement"
        app:layout_constraintStart_toStartOf="@id/cpv_achievement"
        app:layout_constraintTop_toTopOf="@id/cpv_achievement" />

    <!-- 活動標題文本 -->
    <TextView
        android:id="@+id/tv_activity_title_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="活動標題"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/cpv_achievement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cpv_achievement"
        app:layout_constraintTop_toTopOf="@id/cpv_achievement" />

</androidx.constraintlayout.widget.ConstraintLayout>
